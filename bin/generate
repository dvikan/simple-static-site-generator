#!/bin/env php
<?php

declare(strict_types=1);

use dvikan\SimpleParts\ErrorHandler;

if(file_exists(__DIR__ . '/../../../autoload.php')) {
    // We are installed as a library
    require __DIR__ . '/../../../autoload.php';
} else {
    // We are installed as a project or git cloned
    require __DIR__ . '/../vendor/autoload.php';
}

ErrorHandler::initialize();

if ($argc !== 3) {
    exit("Usage: ./generate 'my blog' 'https://example.com'\n");
}

$generator = new \dvikan\SimpleStaticSiteGenerator\Generator(
    $argv[1],
    $argv[2]
);

$generator->generate();
